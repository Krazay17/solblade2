{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./build",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "allowJs": true,
        "checkJs": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    }
}